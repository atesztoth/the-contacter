<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <title>{% block pagetitle %}{% endblock %}</title>

    <link href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,300,600,700,900' rel='stylesheet'
          type='text/css'>
    <link rel="icon" href="/assets/favicon.png" type="image/x-icon">
    <link rel="stylesheet" href="/bower/foundation-sites/dist/foundation.css">
    <link rel="stylesheet" href="/bower/font-awesome/css/font-awesome.css">
    {% block stylesheets %}
    {% endblock %}
</head>
<body>
{% include 'partials/pageheader.njk' %}

<section id="content" class="container">
    <div class="content-wrapper">
        <div class="row">
            <div class="medium-10 medium-offset-1 large-10 large-offset-1 columns">
                <ul class="side-menu">
                    <li class="menutext">Menü</li>
                    <li><a href="{{ 'mainpage' | route() }}">
                            <i class="fa fa-list-alt" aria-hidden="true"></i>
                            <span class="title">Kontaktok</span>
                        </a>
                    </li>
                    {% if currentUser %}
                        <li>
                            <a href="{{ 'addContact' | route() }}">
                                <i class="fa fa-user" aria-hidden="true"></i>
                                <span class="title">Új kontakt</span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ 'contactGroups' | route() }}">
                                <i class="fa fa-users" aria-hidden="true"></i>
                                <span class="title">Csoportok</span>
                            </a>
                        </li>
                        <li>
                            <a href="{{ 'logout' | route() }}">
                                <i class="fa fa-sign-out" aria-hidden="true"></i>
                                <span class="title">Kilépés</span>
                            </a>
                        </li>
                        <li class="lineLong"></li>
                    {% endif %}
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="small-12 medium-10 medium-offset-1 large-10 large-offset-1 columns">
                {% block content %}{% endblock %}
            </div>
        </div>

    </div>
</section>

{% include 'partials/pagefooter.njk' %}

{% block javascripts %}
    <script data-main="assets/js/main" src="/bower/requirejs/require.js"></script>
{% endblock %}
</body>
</html>
