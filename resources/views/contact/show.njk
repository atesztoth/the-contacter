{% extends 'master.njk' %}

{% block pagetitle %}The Contacter - {{ contact.firstname ~ ' ' ~ contact.lastname }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="/assets/css/show.css">
{% endblock %}

{% block content %}
    {% if old('successMsg') %}
        <div data-alert class="alert-box success radius">
            {{ old('successMsg') }}
            <a href="#" class="close">&times;</a>
        </div>
    {% endif %}
    <div id="contact-show">
        <div class="image-wrapper">
            {% if contact.images | length > 0 %}
                <img src="{{ contact.image }}" alt="{{ contact.firstname ~ ' ' ~contact.surname ~ ' profilképe' }}">
            {% endif %}
            <div class="name-wrapper">
                <span class="person-name">{{ contact.firstname ~ ' ' ~contact.surname }}</span>
            </div>
            {% if contact.nickname %}
                <div class="nick-wrapper">
                    <span class="nickname">{{ contact.nickname }}</span>
                </div>
            {% endif %}
            <div class="actionbar">
                <ul>
                    <li><a href="{{ 'editContact' | route({id: contact.id}) }}"><i class="fa fa-pencil"
                                                                                   aria-hidden="true"></i></a></li>
                </ul>
            </div>
        </div>
        <div class="contact-wrapper">
            {% if contact.image %}
                <img src="{{ 'imageServer' | route({ imageName: contact.image.url }) }}">
            {% endif %}
            {% if contact.tnums | length > 0 %}
                <div class="pack">
                    <div class="title">Telefonszámok</div>
                    <div class="content">
                        <ul class="email-list">
                            {% for tnum in contact.tnums %}
                                <li><span class="type">{{ tnum.type }}</span> <span
                                            class="the-thing">{{ tnum.number }}</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
            {% if contact.emails | length > 0 %}
                <div class="pack">
                    <div class="title">Email címek</div>
                    <div class="content">
                        <ul class="email-list">
                            {% for email in contact.emails %}
                                <li><span class="type">{{ email.type }}</span> <span
                                            class="the-thing">{{ email.email }}</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
            {% if contact.addresses | length > 0 %}
                <div class="pack">
                    <div class="title">Email címek</div>
                    <div class="content">
                        <ul class="email-list">
                            {% for address in contact.addresses %}
                                <li><span class="type">{{ address.type }}</span> <span
                                            class="the-thing">{{ address.address }}</span></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
            {% if contact.comment %}
                <div class="pack">
                    <div class="title">Megjegyzésem</div>
                    <div class="content">
                        <p>{{ contact.comment }}</p>
                    </div>
                </div>
            {% endif %}

            {% if contact.cgroups | length > 0 %}
                <div class="pack">
                    <div class="title">Csoportok, melyekbe a kontakt tartozik</div>
                    <div class="content">
                        <ul class="simple-list">
                            {% for cg in contact.cgroups %}
                                <li>{{ cg.name }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}